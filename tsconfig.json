{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "inlineSourceMap": true,
    "types": ["node", "jest"],
    "outDir": "build",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "typings/**/*"
  ]
}